<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/pic_login_bg1"
            android:clipToPadding="true"
            android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="操盘天下"
                android:textColor="@color/white"
                android:textSize="26sp"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#888888"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_huan3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_huan2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_huan1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_logo"
                    android:layout_gravity="center_horizontal"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/pic_login_back"
                android:drawableLeft="@mipmap/pic_login_user1"
                android:drawablePadding="18dp"
                android:hint="@string/text_login_hint_phone"
                android:inputType="number"
                android:lines="1"
                android:padding="12dp"
                android:textSize="15sp"
                android:textColorHint="#cccccc"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/pic_login_back"
                android:drawableLeft="@mipmap/pic_login_lock1"
                android:drawablePadding="18dp"
                android:hint="@string/text_login_hint_pwd"
                android:inputType="textPassword"
                android:lines="1"
                android:padding="12dp"
                android:textSize="15sp"
                android:textColorHint="#cccccc"
                android:textColor="#cccccc"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_loginbtn_bg"

            android:text="@string/text_login"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="bottom">

            <TextView
                android:id="@+id/login_btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="50dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="新用户注册"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_tv_forgetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/text_login_forgetpwd"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
