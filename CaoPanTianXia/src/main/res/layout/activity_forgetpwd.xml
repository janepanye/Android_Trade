<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_activity_bg"
            android:clipToPadding="true"
            android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.coco3g.caopantx.view.TopBarView
            android:id="@+id/forgetpwd_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/shape_linearlayout"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <EditText
                        android:id="@+id/forgetpwd_et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableLeft="@mipmap/pic_login_user"
                        android:drawablePadding="8dp"
                        android:hint="@string/text_login_hint_phone"
                        android:inputType="number"
                        android:lines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/app_text_color"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/color_listview_divider"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp">

                        <EditText
                            android:id="@+id/forgetpwd_et_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:drawableLeft="@mipmap/pic_login_lock"
                            android:drawablePadding="8dp"
                            android:hint="@string/text_register_hint_code"
                            android:inputType="number"
                            android:lines="1"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:textColor="@color/app_text_color"
                            android:textSize="15sp"/>

                        <ImageView
                            android:layout_width="0.5dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/forgetpwd_et_code"
                            android:layout_alignTop="@+id/forgetpwd_et_code"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/forgetpwd_btn_getcode"
                            android:background="@color/color_listview_divider"/>

                        <Button
                            android:id="@+id/forgetpwd_btn_getcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:padding="20dp"
                            android:text="@string/text_register_getcode"
                            android:textColor="@color/app_text_color"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_linearlayout"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">


                    <EditText
                        android:id="@+id/forgetpwd_et_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableLeft="@mipmap/pic_login_lock"
                        android:drawablePadding="8dp"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/app_text_color"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/color_listview_divider"/>

                    <EditText
                        android:id="@+id/forgetpwd_et_confirm_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableLeft="@mipmap/pic_login_lock"
                        android:drawablePadding="8dp"
                        android:hint="确认密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/app_text_color"
                        android:textSize="15sp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/forgetpwd_btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_loginbtn_bg"
                    android:padding="10dp"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</ScrollView>
