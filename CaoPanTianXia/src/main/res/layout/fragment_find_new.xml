<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_activity_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:id="@+id/find_rl_tgzq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/find_iv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/pic_find_banner" />

            <TextView
                android:id="@+id/find_tv_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/find_icon_task"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pic_right_more"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/text_find_rwzx"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/find_tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableLeft="@mipmap/find_icon_msg"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pic_right_more"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/text_find_xxzx"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/linear_find_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">



                    <TextView
                        android:id="@+id/tv_find_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/find_icon_01"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:lines="1"
                        android:text="新手指导"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_12"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_find_finance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableTop="@mipmap/find_icon_02"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="财经资讯"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_12"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_find_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/find_icon_03"
                        android:drawablePadding="8dp"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="财经直播"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_12"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


