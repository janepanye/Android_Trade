<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/pic_login_bg1"
            android:clipToPadding="true"
            android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="操盘天下"
                android:textColor="@color/white"
                android:textSize="26sp"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#888888"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_huan3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_huan2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_huan1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_app_logo"
                    android:layout_gravity="center_horizontal"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <EditText
                android:id="@+id/register_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/pic_login_log4"
                android:drawableLeft="@mipmap/pic_login_user1"
                android:drawablePadding="10dp"
                android:hint="@string/text_login_hint_phone"
                android:inputType="number"
                android:lines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColorHint="#aaaaaa"
                android:textColor="#cccccc"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_et_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pic_login_log4"
                    android:drawableLeft="@mipmap/pic_login_log2"
                    android:drawablePadding="10dp"
                    android:hint="@string/text_register_hint_code"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#aaaaaa"
                    android:textColor="#cccccc"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/register_et_code"
                    android:layout_alignTop="@+id/register_et_code"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/register_btn_getcode"
                    android:background="@color/color_listview_divider"/>

                <com.coco3g.caopantx.view.TimingView
                    android:id="@+id/register_btn_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:text="@string/text_register_getcode"
                    android:textColorHint="#cccccc"
                    android:textColor="#cccccc"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/register_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/pic_login_log4"
                android:drawableLeft="@mipmap/pic_login_lock1"
                android:drawablePadding="10dp"
                android:hint="@string/text_login_hint_pwd"
                android:inputType="number"
                android:lines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColorHint="#aaaaaa"
                android:textColor="#cccccc"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/register_et_recommend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/pic_login_log4"
                android:drawableLeft="@mipmap/pic_login_log3"
                android:drawablePadding="10dp"
                android:hint="@string/text_register_hint_recommend_code"
                android:inputType="number"
                android:lines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColorHint="#aaaaaa"
                android:textColor="#cccccc"
                android:textSize="14sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_loginbtn_bg"
            android:text="@string/text_login_register"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/register_tv_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/text_register_have_account_login"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/register_cbx_protocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/register_check"
                android:drawablePadding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/text_register_protocal"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/register_tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_register_protocal_content"
                android:textColor="@color/register_agreement_color"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
